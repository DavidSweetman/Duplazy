{
    "manifest_version": 2,
    "name": "Duplazy",
    "description": "Extension to automatically duplicate commonly usd characters such as brackets and quotations",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "quote.png",
        "48": "quote.png",
        "128": "quote.png"
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "permissions": [
        "storage"
    ]
}