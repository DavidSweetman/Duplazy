{
    "manifest_version": 2,
    "name": "Duplazy",
    "description": "Extension to automatically duplicate commonly used characters such as brackets and quotations",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "quote16.png",
        "48": "quote48.png",
        "128": "quote128.png"
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "permissions": [
        "storage"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    }
}